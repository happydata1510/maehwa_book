// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int       @id @default(autoincrement())
  title     String
  author    String
  ageMin    Int?
  ageMax    Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  readings  Reading[]

  @@unique([title, author])
  @@index([title])
  @@index([author])
}

model Reader {
  id        Int       @id @default(autoincrement())
  name      String
  age       Int?
  className String?
  parentPhone String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  readings  Reading[]

  @@unique([name])
  @@index([parentPhone])
}

model Reading {
  id        Int       @id @default(autoincrement())
  readDate  DateTime
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // relations
  bookId    Int
  book      Book      @relation(fields: [bookId], references: [id])
  readerId  Int?
  reader    Reader?   @relation(fields: [readerId], references: [id])

  @@index([readDate])
  @@index([bookId])
  @@index([readerId])
}
